@model AccountManager.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container-fluid">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong> Registration form </strong>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
                {
                    <fieldset>
                        <div class="row">
                            <div class="center-block">
                                <img class="profile-img"
                                     src="~/Images/logo.jpg" alt="">
                            </div>
                        </div>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-envelope"></i>
                                        </span>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "email" })
                                    </div>
                                    <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-user"></i>
                                        </span>
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "username" })
                                    </div>
                                    <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="Username"></span>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-lock"></i>
                                        </span>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "password" })
                                    </div>
                                    <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-lock"></i>
                                        </span>
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "confirm password" })
                                    </div>
                                    <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="ConfirmPassword"></span>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <span id="registerSpan" class="input-group-addon" onclick="Register()">
                                            <i class="glyphicon glyphicon-plus-sign" style="color:Highlight"></i>
                                        </span>
                                        <input id="registerInput" type="submit" class="btn btn-primary btn-block form-control" value="Register">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section Css {
    <link rel="Stylesheet" href="@Href("~/Content/app.account.css")" />
}